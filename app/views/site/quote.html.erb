  <%= form_for :customer, :url => 'purchase', :html => { :method => 'post', :id => 'getaquoteintro_form' } do |customer| %>
    <!-- property field start -->
    <%= fields_for :property do |property| %>
      <div class="form-steps">
        <ul>
          <li class="current-step">1. Property Information</li>
          <li>2. Select Your Plan</li>
          <li>3. Sign Up Now</li>
