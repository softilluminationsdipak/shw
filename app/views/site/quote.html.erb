            <div class="row">
              <label for="zipcode">Zip Code *</label>
			        <%=property.text_field :zip_code, :id => 'intro_property_zip_code', :tabindex => 10 ,:class => "field" %>
            </div>
            <div class="row">
              <label>Type of Home</label>
			        <%= select_tag(:type_of_home, options_for_select(Customer.home_occupancies.to_a.map(&:second)), :tabindex => 11) %>
            </div>
            <div class="row">
              <label>Square Footage</label>
              <div class="radio-wrap">
					      <% i = 0; Customer.home_sizes.each do |code, size| %>
				          <label>
				            <%= customer.radio_button :home_size_code, code, :checked => (code == 0), :id => "customer_home_size_#{code}", :tabindex => (12+i) %>
				            <%= size %>
 					        </label>
					       <% i += 1; end %>
              </div>
            </div>
			      <div class="row">
				      <div class="submit-button-wrap" style="text-align: right;">
					      <input type="hidden" value="2" name="step" />
