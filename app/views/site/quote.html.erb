			        <%= customer.text_field :first_name, :id => 'intro_customer_first_name', :tabindex => 1,:class => "field" %>
            </div>
            <div class="row">
              <label for="lastname">Last Name *</label>
              <%=customer.text_field :last_name, :id => 'intro_customer_last_name', :tabindex => 2,:class => "field" %>
            </div>
            <div class="row">
              <label for="email">Email *</label>
              <%=customer.text_field :email, :id => 'intro_customer_email', :tabindex => 3,:class => "field" %>
            </div>
            <div class="row">
              <label for="homephone">Home Phone *</label>
              <%=customer.text_field :customer_phone, :id => 'intro_customer_customer_phone', :tabindex => 4,:class => "field" %>
            </div>
            <div class="row">
              <label for="workphone">Work Phone</label>
              <%=customer.text_field :work_phone, :tabindex => 5,:class => "field" %>
            </div>
            <div class="row">
              <label for="cellphone">Cell Phone</label>
              <%=customer.text_field :mobile_phone, :tabindex => 6,:class => "field" %>
            </div>
            <div class="row">                                
