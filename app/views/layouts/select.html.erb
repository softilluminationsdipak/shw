<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<title><%= "#{$installation.name}#{@page_title ? ' - ' << @page_title : ''}" %></title>
	<%= stylesheet_link_tag $installation.code_name %>
    <!--[if lt IE 8]>
        <%= stylesheet_link_tag "#{$installation.code_name}-ie6" %><![endif]-->
	<%#= javascript_include_tag 'mootools-1.2.3-core-yc', 'application' %>
  <%= javascript_include_tag 'MooTools-Core-1.5.1.js', 'application' %>
  <% if controller.controller_name == "sessions" || controller.controller_name == "registrations" %>
    <%= stylesheet_link_tag 'bootstrap_layout' %>
    <%= javascript_include_tag 'bootstrap_layout' %>
  <% end %>


	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
	<script type="text/javascript">
	  jQuery.noConflict();
    window.history.forward();
     function noBack() { 
          window.history.forward(); 
     }
  </script>
    
	<%= yield :head %>
  <%= google_analytics_js %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-30123828-1', 'auto');
    ga('send', 'pageview');

  </script>  
  </head>
  <body onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
    <%= render :partial => "/shared/hubspot_analytics_code" %>
    <%= render :partial => '/shared/team_sales_agent_chat' %>
    <div id="page">
      <div id="header"><div class="fixed-width">
          <div id="topbar">
            <div class="login-menu"><div class="right-round">
                <%# if controller.controller_name == 'site' && controller.action_name == 'submitclaim' %>
                  <%= link_to "Submit Claim", '/submitclaim' %>
                <%# else %>
                  <%#= link_to "Customer Login", login_path %>
                <%# end %>
                <span>|</span>
                <%= link_to "Advertiser Login", affiliates_path %>
            </div></div>
          </div>
          <a href="/" class="logo"><img src="/assets/logo.png" alt="Select Home Warranty" /></a>
          <div class="phone">
            <h3><%= $installation.phone %></h3>
            <p>CALL NOW FOR A FREE QUOTE!</p>
          </div>
          <ul class="main-menu">
            <li class="first">
              <a href="/plans" class="<%= 'active' if current_page?('/plans')%>">Plans</a>
            </li>
            <li>
              <a href="/homeownercenter" class="<%= 'active' if current_page?('/homeownercenter')%>">Homeowners</a>
            </li>
            <li>
              <a href="/buyingandselling" class="<%= 'active' if current_page?('/buyingandselling')%>">Buyers &amp; Sellers</a>
            </li>
            <li>
              <a href="/realestate" class="<%= 'active' if current_page?('/realestate')%>">Real Estate Center</a>
            </li>
            <li>
              <%= link_to "Contractors", "/contractors", :class => "#{'active' if current_page?('/contractors')}" %>
            </li>
            <li class="last">
              <%= link_to "Get a Quote", "/quote", :class => "#{'active' if current_page?('/quote')}" %>
            </li>
          </ul>


      </div></div>
      
      <div id="content"<% unless @content_class.nil? %> class="<%=@content_class%>"<% end %>>
        <%# class="@without_padding"> %>
        <%=yield%>
      </div>

      <div id="footer"><div class="fixed-width">
          <ul>
           <li><a href="/plans">Plans</a></li>
            <li><a href="/homeownercenter">Homeowners</a></li>
            <li><a href="/buyingandselling">Buyers &amp; Sellers</a></li>
            <li><a href="/realestate">Real Estate Center</a></li>
            <li><a href="/contractors">Contractors</a></li>
            <li><a href="/termsconditions">Terms &amp; Conditions</a></li>
            <li><a href="/contact">Contact Us</a></li>
            <li><a href="/faq">FAQs</a></li>
            <li><%= link_to "Submit Claim", '/submitclaim' %></li>
          </ul>
      </div></div>
    </div>
  </body>
</html>
