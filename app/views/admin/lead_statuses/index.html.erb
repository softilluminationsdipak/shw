<h2>Lead Statues</h2>
<table class="table table-condensed table-striped table-bordered sortable_table">
	<thead>
	<tr>
		<th><strong>STATUS ID</strong></th>
		<th><strong>LEAD CODE</strong></th>
		<th><strong>LEAD STATUS</strong></th>
		<th><strong>IS ACTIVE</strong></th>
		<th><strong>IS NAVIGATION</strong></th>
		<th><strong>ACTIONS</strong></th>
	</tr>
	</thead>
	
	<tbody>
		<% @lead_statuses.each do |cstatus| %>
			<tr>
				<td><%= cstatus.csid  %></td>
				<td><%= cstatus.lead_code %></td>
				<td><%= cstatus.lead_status %></td>
				<td><%= cstatus.active == true ? "Yes" : "No" %></td>
				<td><%= cstatus.navigation == true ? "Yes" : "No" %></td>
				<td>
					<a href="/admin/lead_statuses/edit/<%= cstatus.id %>">Edit&nbsp;&nbsp;</a>&nbsp;&nbsp;
					<%= link_to 'Delete', "/admin/lead_statuses/destroy/#{cstatus.id}", :confirm => "Are you sure you want to permanently delete this Status? This operation cannot be undone." %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<h4 class="breadcrumb">Add Lead Status</h4>
<%= render :partial => "/admin/lead_statuses/new", :locals => {:lead_url => "create"} %>