<%= form_for  @contractor_status, :url => { :action => "#{contractor_url}", :id => @contractor_status.id }, :remote => true do |cstatus| %>
	<table class="form_table">
	 	<tbody>
			<tr>
				<td>Contractor Code:</td>
				<td><%= cstatus.text_field :contractor_code %></td>
			</tr>
			<tr>
				<td>Contractor Status:</td>
				<td><%= cstatus.text_field :contractor_status %></td>
			</tr>
			<tr>
				<td>Is Active:</td>
				<td><%= cstatus.check_box :active %></td>
			</tr>
			<tr>
				<td><br>Navigation:</td>
				<td><%= cstatus.check_box :navigation %></td>
			</tr>
			<tr>
				<td colspan="4"><br>
					<%= submit_tag "#{contractor_url.capitalize} Contractor Status",:id => "save_contractor_status", :class => "btn" %>
				</td>
			</tr>
	 	</tbody>
	</table>
<% end %>