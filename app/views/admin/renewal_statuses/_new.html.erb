<%= form_for  @renewal_status, :url => { :action => "#{renewal_url}", :id => @renewal_status.id }, :remote => true do |cstatus| %>
	<table class="form_table">
	 	<tbody>
			<tr>
				<td>Renewal Code:</td>
				<td><%= cstatus.text_field :renewal_code %></td>
			</tr>
			<tr>
				<td>Renewal Status:</td>
				<td><%= cstatus.text_field :renewal_status %></td>
			</tr>
			<tr>
				<td>Is Active:</td>
				<td><%= cstatus.check_box :active %></td>
			</tr>
			<tr>
				<td><br>Navigation:</td>
				<td><%= cstatus.check_box :navigation %></td>
			</tr>
			<tr>
				<td colspan="4"><br><%= submit_tag "#{renewal_url.capitalize} Renwal Status",:id => "save_renewal_status", :class => "btn" %></td>
			</tr>
	 	</tbody>
	</table>
<% end %>