<h2>Content </h2>
<table class="table table-condensed table-striped table-bordered sortable_table">
	<thead>
	<tr>
		<th><strong>Sr. No.</strong></th>
		<th><strong>Title</strong></th>
		<th><strong>Actions</strong></th>
	</tr>
	</thead>
	
	<tbody>
		<% @contents.each_with_index do |content,index| %>
			<tr>
				<td><%= index+1  %></td>
				<td><%= content.slug.strip %></td>
				<td>
					<%= link_to "Edit", "/admin/content/edit/#{content.id}" %> 
					<%# if content.is_delete? %>
						<%#= link_to 'Restore', "/admin/content/restore/#{content.id}", :confirm => "Are you sure you want to restore this Content?" %>
					<%# else %>
						<%#= link_to 'Delete', "/admin/content/destroy/#{content.id}", :confirm => "Are you sure you want to delete this Content?" %>
					<%# end %>						
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= form_tag async_create_content_path, :method => 'post' do %>
	<h2>Add Content</h2>
	<table>
		<tr>
			<td style="width:35%;">
				<%= text_field_tag 'content[slug]', '', :required => true %>
			</td>
			<td><%= check_box_tag 'content[is_tos]' %> Is TOS? </td>
			<td><%= submit_tag "Add new content", :name => nil %></td>
		</tr>
	</table>
<% end %>
