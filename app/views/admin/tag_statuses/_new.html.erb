<%= form_for  @tag_status, :url => { :action => "#{tag_url}", :id => @tag_status.id }, :remote => true do |cstatus| %>
	<table class="form_table">
	 	<tbody>
			<tr>
				<td>Tag Code:</td>
				<td><%= cstatus.text_field :tag_code %></td>
			</tr>
			<tr>
				<td>Tag Status:</td>
				<td><%= cstatus.text_field :tag_status %></td>
			</tr>
			<tr>
				<td>Is Active:</td>
				<td><%= cstatus.check_box :active %></td>
			</tr>
			<tr>
				<td><br>Navigation:</td>
				<td><%= cstatus.check_box :navigation %></td>
			</tr>
			<tr>
				<td colspan="4"><br><%= submit_tag "#{tag_url.capitalize} Tag Status",:id => "save_tag_status", :class => "btn" %></td>
			</tr>
	 	</tbody>
	</table>
<% end %>